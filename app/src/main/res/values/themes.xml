<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RealEstate" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/true_white</item>

        <item name="colorOnSurface">@color/colorText</item>

        <item name="iconTint">@color/true_white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorStatusBar</item>
        <!-- Customize your theme here. -->
        <item name="textInputOutlinedStyle">@style/MaterialEditTextStyle</item>

    </style>

    <style name="AppTheme" parent="Theme.RealEstate">
        <item name="materialButtonStyle">@style/OutlinedButtonStyle</item>
    </style>

    <style name="CustomToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:textColor">@color/true_white</item>
    </style>

</resources>