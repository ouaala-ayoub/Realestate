<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OutlinedButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="textAllCaps">false</item>
        <item name="strokeColor">@color/stroke_button_color</item>
        <item name="strokeWidth">@dimen/button_stroke_size</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipCornerRadius">9dp</item>
        <item name="chipBackgroundColor">@color/chip_color_state</item>
        <item name="android:textColor">@color/text_color_state</item>
    </style>

    <style name="MyActionBarTitleStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/teal_700</item>
    </style>
    
    <style name="MaterialEditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/edit_text_stroke</item>
    </style>

    <style name="CustomCountryPickerStyle" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:textColor">@color/colorText</item>
    </style>
</resources>