<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="4dp" android:color="@color/colorPrimary" /> <!-- Define your desired stroke color -->
            <corners android:radius="8dp" /> <!-- Customize the corner radius if needed -->
        </shape>
    </item>
    <item android:state_enabled="false">
        <!-- Define a different appearance for disabled state if needed -->
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="4dp" android:color="@color/colorPrimary" /> <!-- Define your desired stroke color -->
            <corners android:radius="8dp" /> <!-- Customize the corner radius if needed -->
        </shape>
    </item>
</selector>